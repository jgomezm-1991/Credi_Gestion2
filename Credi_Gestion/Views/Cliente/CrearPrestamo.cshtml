@model List<Credi_Gestion.Models.Cliente>
<h1 style="font-family:Constantia; font-size:xx-large;color:lightseagreen;text-align:justify">Crear nuevo prestamo</h1>
<form asp-action="GuardarPrestamo" style="font-family:Constantia;font-size:large; color:lightseagreen">
    <div class="col-md-6">
        <label for="selectcliente">Cliente:</label>
        <select class="form-control" name="IdCliente" id="selectcliente">
            @{
                foreach (var Cliente in Model)
                {
                    <option value="@Cliente.IdCliente">@Cliente.NombreCliente @Cliente.Apellidos</option>
                }
            }
        </select>
    </div>
    <div class="col-md-6">
        <label class="col-form-label">Monto</label>
        <input class="form-control" name="Monto" value="" type="text" placeholder="Monto" />

    </div>
    <div class="col-md-6">
        
            <label for="selectMoneda">Moneda</label>
            <select class="form-control" name="Moneda" id="selectMoneda">
                <option value="" disabled="" selected="">Seleccione</option>
                <option value="Cordobas">Córdoba</option>
                <option value="Dolares">Dólares</option>
                <option value="Euros">Euros</option>
            </select>
        

    </div>
    <div class="col-md-6">
        <label class="col-form-label">Plazo</label>
        <input class="form-control" name="Plazo" value="" type="text" placeholder="Plazo" />

    </div>
    <div  class="col-md-6">
        <label class="col-form-label">Interés %</label>
        <input class="form-control" name="interes" value="" type="text" placeholder="Interés" />
    </div>  


   
    <div class="col-md-6" style="text-align:right">
        <input type="submit" value="Guardar" onclick="return confirm('¿Esta seguro que desea guardar el prestamo?')" class="btn btn btn-success">
        <input style="margin:10px" type="submit" asp-action="Prestamos" value="Cancelar" class="btn btn-secondary mx-auto">
    </div>



</form>
