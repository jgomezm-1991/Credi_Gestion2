<style>
    body {
        margin: 0;
        padding: 0;
        background-color:aliceblue;
        height: 100vh;
    }

    * {
        box-sizing: border-box;
    }

    #buscar {
        background-image: url('/css/searchicon.png');
        background-position: 10px 10px;
        background-repeat: no-repeat;
        width: 100%;
        font-size: 16px;
        padding: 12px 20px 12px 40px;
        border: 1px solid rgb(255 255 255 / 90%);
        margin-bottom: 12px;
    }

    #Clientes {
        border-collapse: collapse;
        width: 100%;
        border: 1px solid #ddd;
        font-size: 18px;
    }

        #Clientes th, #Clientes td {
            text-align: left;
            padding: 12px;
        }

        #Clientes tr.header_fijo {
            border-bottom: 0px solid #ddd;
        }

        #Clientes tr.header_fijo, #Clientes tr:hover {
            background-color: #f1f1f1;
        }

    thead tr th {
        position: sticky;
        top: 0;
        z-index: 10;
        background-color: #ffffff;
    }

    .inner-addon {
        position: relative;
    }

        .inner-addon .glyphicon {
            position: absolute;
            padding: 10px;
            pointer-events: none;
        }

    .left-addon .glyphicon {
        left: 0px;
    }


    .left-addon input {
        padding-left: 30px;
    }
</style>

<div class="table-responsive" @*style="overflow-y: scroll; height: 400px"*@>
    <table id="Clientes" class="table table-bordered header_fijo"  overflow="scroll">

        <thead class="thead-dark" id="tableheader">
            <tr>
                <th>
                    Nombre completo
                </th>

                <th>
                    Cédula
                </th>
                <th>
                    Género
                </th>
                <th>
                    Dirección
                </th>

                <th>
                    Fecha
                </th>
                <th >
                    Estado
                </th>
                <th width="30%">
                    Opciones
                </th>


               
            </tr>
        </thead>
        @*<script language="JavaScript" src="buscartabla/site.js"</script>*@

        <tbody>
            @{
                foreach (var Cliente in Model)
                {
                        <tr>


                            <td>
                                @{
                                    <span>@(Cliente.NombreCliente + " " + Cliente.Apellidos)</span>
                                }

                            </td>
                            <td>@Cliente.Cedula</td>
                            <td>@Cliente.Genero</td>
                            <td>@Cliente.Direccion</td>
                            <td>@Cliente.FechaReg.ToShortDateString()</td>
                            <td>@Cliente.Estado</td>
                            <td>


                                <a class="btn btn-success"  asp-action="AgregarPrestamo" asp-route-IdCliente="@Cliente.IdCliente">Nuevo Préstamo</a>                    
                                <a class="btn btn-info" asp-action="EditarCliente" asp-route-IdCliente="@Cliente.IdCliente">Editar</a>
                                <a id="eliminarcliente" class="btn btn-danger" asp-action="EliminarCliente" asp-route-IdCliente="@Cliente.IdCliente">Eliminar</a>

                            </td>

                        </tr>
                }
            }
        </tbody>
    </table>
</div>
