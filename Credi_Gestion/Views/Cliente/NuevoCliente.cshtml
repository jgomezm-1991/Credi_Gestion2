<form asp-action="NuevosCliente" style="text-align:center">
    
    <div class="row">


        <div class="col-md-6">
            <div class=" form-inline">
                <label class="col-form-label">Nombres</label>
                <input class="form-control" name="Nombre" type="text" placeholder="Nombres" />
            </div>           

        </div>
        
        <div class="col-md-2">

            <label class="col-form-label">Cédula</label>

        </div>
        <div class="col-md-4">

            <input class="form-control" name="Cedula" type="text" placeholder="Número de Identificación" />


        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-2">

            <label class="col-form-label">Dirección</label>

        </div>
        <div class="col-md-4">

            <input class="form-control" name="Direccion" type="text" placeholder="Ecriba la Dirección domiciliar" />

        </div>
        <div class="col-md-2">

            <label class="col-form-label">Teléfono</label>

        </div>
        <div class="col-md-4">
            <input class="form-control" name="Telefono" type="text" placeholder="Número Teléfono o Convencional" />


        </div>
    </div>
    <br />
    <div class="row">
        <div class=" col-md-2">
            <label for="selectsexo">Sexo:</label>

        </div>
        <div class=" col-md-4">

            <select class="form-control" name="Sexo" id="selectsexo">
                <option>Seleccione</option>
                <option>M</option>
                <option>F</option>
            </select>

        </div>


        <div class="col-md-2">

            <label class="col-form-label">Préstamo</label>

        </div>

        <div class="col-md-4">
            <input class="form-control" name="Prestamo" type="text" placeholder="Prestamo" />

        </div>


    </div>
    <br />

    <div class="row">

        <div class="col-md-2">
            <label class="col-form-label"> Saldo</label>


        </div>
        <div class="col-md-4">

            <input class="form-control" name="Saldo" type="text" placeholder="Saldo" />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-6">

        </div>
        <div class="col-md-6">
            <div>
                <input style="margin:10px" type="submit" value="Cancelar" class="btn btn-secondary mx-auto float-right">
                <input style="margin:10px" type="submit" value="Guardar" class="btn btn-success float-right">
            </div>
        </div>
    </div>
